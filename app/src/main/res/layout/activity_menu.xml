<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.demo.javaguru.menuActivity"
    android:background="@drawable/bg2"
    >
<TextView android:id="@+id/menutxt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Java Tutorials:"
    android:textSize="21sp"
    android:textStyle="bold"
    android:textColor="@color/grey"
    />
    <TextView android:id="@+id/menutxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menutxt"
        android:text="1. Introduction to Java"
        android:textSize="20dp"
        android:textColor="@color/grey"
        android:layout_marginTop="10dp"/>
    <Button android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menutxt1"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/menutxt1"
        android:text="GO"
        style="@style/Button"
        />
    <TextView android:id="@+id/menutxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button1"
        android:text="2. Classes and Objects"
        android:textSize="20dp"
        android:textColor="@color/grey"
        android:layout_marginTop="10dp"/>
    <Button android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menutxt2"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/menutxt2"
        android:text="GO"
        style="@style/Button"
        />
    <TextView android:id="@+id/menutxt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button2"
        android:text="3. Inheritance"
        android:textSize="20dp"
        android:textColor="@color/grey"
        android:layout_marginTop="10dp"/>
    <Button android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menutxt3"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/menutxt3"
        android:text="GO"
        style="@style/Button"
        />
    <TextView android:id="@+id/menutxt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button3"
        android:text="4.Exception Handling"
        android:textSize="20dp"
        android:textColor="@color/grey"
        android:layout_marginTop="10dp"/>
    <Button android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menutxt4"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/menutxt4"
        android:text="GO"
        style="@style/Button"
        />
    <TextView android:id="@+id/menutxt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button4"
        android:text="5.Quiz Section"
        android:textSize="20dp"
        android:textColor="@color/grey"
        android:layout_marginTop="10dp"/>
    <Button android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menutxt5"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/menutxt5"
        android:text="GO"
        style="@style/Button"
        />
</RelativeLayout>
